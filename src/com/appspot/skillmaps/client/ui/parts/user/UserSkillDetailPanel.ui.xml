<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="style" type="com.appspot.skillmaps.client.ui.parts.user.UserSkillDetailPanel.Css">
		.skillPanel{
		}

		.name {
			overflow: hidden;
		}

		.header{
			background: #7FB2E3;
			background: -webkit-gradient(linear, literal('left top'),literal('left bottom'), literal('from(#7FB2E3), color-stop(50% ,#ECF5FE) ,to(#7FB2E3)') );
			background: -moz-linear-gradient(top, #7FB2E3, literal('#ECF5FE 50%') ,#7FB2E3);
			filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr='#FF7FB2E3',endColorstr='#FFECF5FE')");
			background: transparent 9;
			border-bottom : 1px solid #7FB2E3;
			width:100%;
			vertical-align: middle;
		}

		.delimiter{
			margin: 0 2px;
			color: #CCC;
		}

		.button{
			margin: 1px;
			padding: 1px 2px;
		}

		.detailPanel{
			border-left : 1px solid #7FB2E3 !important;
			border-right : 1px solid #7FB2E3 !important;
			border-bottom : 1px solid #7FB2E3 !important;
			margin-left: 0px !important;
			background-color: white;
			padding: 0 !important;
		}

		.descriptionLabel{
			background: #ECF5FE;
			vertical-align: middle;
			padding:2px 4px;
			font-weight: bold;
		}

		.description{
			border-left: 3px solid white !important;
			border-bottom: 2px solid white !important;
			border-right: 2px solid white !important;
			padding:2px 4px;
		}

		.buttonPanel{
			text-align: right;
			padding: 2px 4px;
		}
	</ui:style>
	<ui:with field="res" type="com.appspot.skillmaps.client.bundle.Resources"/>

	<g:DisclosurePanel ui:field="skillPanel" width="100%" animationEnabled="true" addStyleNames="{style.skillPanel}">
		<g:customHeader>
			<g:HorizontalPanel addStyleNames="{style.header}">
				<g:cell horizontalAlignment="ALIGN_LEFT" width="5px">
					<g:InlineLabel ui:field="openLabel">[＋]</g:InlineLabel>
				</g:cell>
				<g:cell horizontalAlignment="ALIGN_LEFT" width="150px">
					<g:InlineLabel ui:field="name" addStyleNames="{style.name}"/>
				</g:cell>
				<g:HTMLPanel width="100px">
					<span class="{style.delimiter}">|</span>ポイント :<g:NumberLabel ui:field="point"/>
				</g:HTMLPanel>
				<g:HTMLPanel width="100px">
					<span class="{style.delimiter}">|</span>賛同者数 :<g:NumberLabel ui:field="agreedCount"/>
				</g:HTMLPanel>
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:SimplePanel ui:field="agreedActionPanel"/>
				</g:cell>
			</g:HorizontalPanel>
		</g:customHeader>
		<g:HTMLPanel addStyleNames="{style.detailPanel}">
			<g:VerticalPanel width="100%">
				<g:Label addStyleNames="{style.descriptionLabel}">詳細</g:Label>
				<g:Label addStyleNames="{style.description}" ui:field="description"/>
				<g:HTMLPanel addStyleNames="{style.buttonPanel}">
					<hr/>
					<g:Button ui:field="addCommentButton" title="このスキルにコメントを追加します。">コメントする</g:Button>
					<hr/>
				</g:HTMLPanel>
				<g:Label>■コメント一覧</g:Label>
				<g:VerticalPanel spacing="3" ui:field="commentsPanel">
					<g:Image resource="{res.loader}"/>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:DisclosurePanel>
</ui:UiBinder>