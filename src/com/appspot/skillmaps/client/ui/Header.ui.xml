<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.appspot.skillmaps.client.ui.Header.Style">
		.menu {
			float: left;
			margin-top: 10px;
		}
		.sign {
			float: right;
			margin-top: 10px;
		}

		.nickname{
			display: none;
		}


		.sign-in .nickname{
			display: inline;
		}


		.demiliter {
			margin: 0px 10px;
		}

		.sign .demiliter{
			display: none;
		}
		.sign.sign-in .demiliter{
			display: inline;
			margin: 0px 10px;
		}

		.signinlink {
			display: inline;
		}

		.sign-in .signinlink {
			display: none;
		}

		.signoutlink {
			display: none;
		}

		.sign-in .signoutlink{
			display: inline;
		}

		.header {
			position: relative;
			padding: 0 100px;
			height: 100%;
		}

		.logo-box{
			float: left;
		}

		.logo {
			display: inline;
			padding-right:10px;
		}

		.bg {
			width: 100%;
			height: 100%;
			position: absolute;
			top: 0;
			left: 0;
			background:#111;
			background:-webkit-gradient(linear,literal('left top'),literal('left bottom'),from(#F5F5F5),to(#FFF));
			background:-moz-linear-gradient(top,#F5F5F5,#FFF);
			background:transparent	9;
			filter:progid\:DXImageTransform\.Microsoft\.gradient(startColorstr\='#F5F5F5',endColorstr\='#FFF');
			box-shadow:0 1px 2px rgba(0, 0, 0, 0.3);
			-moz-box-shadow:0 1px 2px rgba(0, 0, 0, 0.3);
			-webkit-box-shadow:0 1px 2px rgba(0, 0, 0, 0.3);
		}

		.header .menu,.logo-box,.sign{
			position: relative;
			color: black;
		}
		.header a {
			color: black;
		}
	</ui:style>
 	<g:HTMLPanel addStyleNames="{style.header}">
 		<div class="{style.bg}"></div>
 		<div>
			<g:HorizontalPanel addStyleNames="{style.logo-box}">
				<g:HTMLPanel>
					<h1 class="{style.logo}">Skill Maps</h1>
				</g:HTMLPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel styleName="{style.menu}">
				<g:Hyperlink targetHistoryToken="!home:">Home</g:Hyperlink>
				<g:Label styleName="{style.demiliter}">|</g:Label>
				<g:Hyperlink targetHistoryToken="!myPage:">MyPage</g:Hyperlink>
				<g:Label styleName="{style.demiliter}">|</g:Label>
				<g:Hyperlink targetHistoryToken="!userList:0">Users</g:Hyperlink>
				<g:Label styleName="{style.demiliter}">|</g:Label>
				<g:Hyperlink targetHistoryToken="!skillList:">Skills</g:Hyperlink>
			</g:HorizontalPanel>
			<g:HorizontalPanel ui:field="signPanel" styleName="{style.sign}">
				<g:Label addStyleNames="{style.nickname}" ui:field="nickname"></g:Label>
				<g:Label styleName="{style.demiliter}">|</g:Label>
				<g:Anchor addStyleNames="{style.signinlink}" ui:field="signin">Sign In</g:Anchor>
				<g:Anchor addStyleNames="{style.signoutlink}" ui:field="signout">Sign Out</g:Anchor>
			</g:HorizontalPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
