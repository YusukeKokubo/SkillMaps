<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		<ui:style>
		.form {
			border: 2px solid #ABB8C7;
			width: 760px;
			padding: 15px;
			background-color: #ffffff;
		}
	</ui:style>

	<g:DialogBox ui:field="form" visible="false"
		animationEnabled="true" styleName="{style.form}">
		<g:VerticalPanel>
			<g:Label text="スキルの名前" />
			<g:SuggestBox ui:field="skillName" />
			<g:Label text="この人が持っているスキルの説明" />
			<g:TextArea ui:field="description" />
			<g:Label text="個人的なコメント" />
			<g:TextArea ui:field="comment" />
			<g:HorizontalPanel>
				<g:Button ui:field="submit" text="submit" />
				<g:Button ui:field="cancel" text="cancel" />
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:DialogBox>
</ui:UiBinder>