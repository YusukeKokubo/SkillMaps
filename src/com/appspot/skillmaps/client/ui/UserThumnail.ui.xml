<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.anchor {
			color: #03f;
			text-decoration: underline;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Image ui:field="icon" width="30px" height="30px" />
					<g:Anchor ui:field="id" styleName="{style.anchor}" />
					<g:HTMLPanel>(</g:HTMLPanel><g:Label ui:field="name" /><g:HTML>)</g:HTML>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
