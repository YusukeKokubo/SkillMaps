<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:sm="urn:import:com.appspot.skillmaps.client.ui">
	<ui:style>
		.homeHeader{
			margin-bottom: 10px;
		}


		.contentsPanelBack{
			padding :3px;
			height: 100%;
			border-radius: 0 5px 5px 5px;
			-webkit-border-radius: 0 5px 5px 5px;
			-moz-border-radius:  0 5px 5px 5px;
		}

		.contentsPanel{
			padding: 3px;
			border-radius: 0 5px 5px 5px;
			-webkit-border-radius: 0 5px 5px 5px;
			-moz-border-radius:  0 5px 5px 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SimplePanel addStyleNames="{style.homeHeader}" ui:field="homeHeaderPanel"/>
		<g:DecoratedTabBar ui:field="menuBar"/>
		<div class="{style.contentsPanelBack}">
			<g:SimplePanel addStyleNames="{style.contentsPanel}" ui:field="contentsPanel"/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>