<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.user-dialog {
			border: 2px solid #ABB8C7;
			width: 650px;
			padding: 15px;
			background-color: #ffffff;
		}
		.tool-bar{
			width:100%;
			background-color: #E5ECF9;
			margin: 0 0 8px;
			text-align: right;
		}

	</ui:style>
	<g:HTMLPanel>
		<div id="usersToolBar" class="{style.tool-bar}">
			<g:ListBox ui:field="layoutSelect"/>列で表示
		</div>
		<g:VerticalPanel ui:field="usersPanel" width="100%">
		</g:VerticalPanel>
		<g:PopupPanel ui:field="userDialog" visible="false" animationEnabled="true" styleName="{style.user-dialog}" />
	</g:HTMLPanel>
</ui:UiBinder>
