<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.user-dialog {
			border: 2px solid #ABB8C7;
			width: 650px;
			padding: 15px;
			background-color: #ffffff;
		}
		.tool-bar {
			height:24px;
			background-color: #E5ECF9;
			margin: 0 0 8px;
		}
		.tool-bar-right{
			margin: 0 0 8px;
			padding-top:4px;
			text-align: right;
			float: right;
		}
		.tool-bar-left{
			margin: 0 0 8px;
			text-align: left;
			float: left;
		}
	</ui:style>
	<g:HTMLPanel>
		<div id="usersToolBar" class="{style.tool-bar}">
			<div id="usersToolBar-left" class="{style.tool-bar-left}">
				<g:ListBox ui:field="layoutSelect"/>列で表示
			</div>
			<div id="usersToolBar-right" class="{style.tool-bar-right}">
				<g:InlineLabel ui:field="page">1</g:InlineLabel>ページ目
				|<g:Anchor ui:field="prevAnchor"  href="#" addStyleNames="link" visible="false">&nbsp;前へ</g:Anchor>&nbsp;
				&nbsp;<g:Anchor ui:field="nextAnchor" href="#"  addStyleNames="link" >次へ</g:Anchor>
			</div>
		</div>
		<g:VerticalPanel ui:field="usersPanel" width="100%">
		</g:VerticalPanel>
		<g:PopupPanel ui:field="userDialog" visible="false" animationEnabled="true" styleName="{style.user-dialog}" />
	</g:HTMLPanel>
</ui:UiBinder>
