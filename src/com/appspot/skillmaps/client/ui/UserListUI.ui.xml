<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:sm="urn:import:com.appspot.skillmaps.client.ui">
	<ui:style>
		.tool-bar {
			height:24px;
			background-color: #E5ECF9;
			margin: 0 0 8px;
		}
		.tool-bar-right{
			margin: 0 0 8px;
			padding-top:4px;
			text-align: right;
			float: right;
		}
		.tool-bar-left{
			margin: 0 0 8px;
			text-align: left;
			float: left;
		}

		.delimita{
			margin-left: 2px;
			margin-right: 2px;
			display: inline;
		}
	</ui:style>
	<g:HTMLPanel>
		<div ui:field="usersToolBar" class="{style.tool-bar}">
			<div id="usersToolBar-left" class="{style.tool-bar-left}">
				<g:ListBox ui:field="layoutSelect">
					<g:item value="1">1</g:item>
					<g:item value="2">2</g:item>
				</g:ListBox>列で表示
			</div>
			<div id="usersToolBar-right" class="{style.tool-bar-right}">
				<g:InlineLabel ui:field="page">1</g:InlineLabel>ページ目
				<div class="{style.delimita}">|</div>
				<g:Anchor ui:field="prevAnchor"  href="javascript:void(0)" addStyleNames="link" visible="false">前へ</g:Anchor>
				<g:Anchor ui:field="nextAnchor" href="javascript:void(0)"  addStyleNames="link" >次へ</g:Anchor>
			</div>
		</div>
		<g:VerticalPanel ui:field="usersPanel" width="100%">
		</g:VerticalPanel>
		<sm:UserDialog ui:field="userDialog" visible="false" animationEnabled="true" />
	</g:HTMLPanel>
</ui:UiBinder>
