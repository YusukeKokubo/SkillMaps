<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.form {
			border: 2px solid #ABB8C7;
			width: 300px;
			padding: 15px;
			background-color: #ffffff;
		}
		.button {
			margin-top: 15px;
			background-color: #DDDDDD;
			padding: 5px;
			border: 1px solid #A2BBDD;
			color: #333333;
		}
		.grid tr {
			margin: 0 5px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Image ui:field="icon" />
					<g:HorizontalPanel>
						<g:Anchor ui:field="id" />
						<g:HTMLPanel>(</g:HTMLPanel><g:Label ui:field="name" /><g:HTML>)</g:HTML>
					</g:HorizontalPanel>
					<g:Label ui:field="selfIntroduction" />
					<g:FlexTable ui:field="skills" styleName="{style.grid}" />
					<g:Anchor ui:field="addSkill" text="この人のスキルを追加する" styleName="{style.button}" />
				</g:VerticalPanel>
				<g:DialogBox ui:field="form" visible="false" animationEnabled="true" styleName="{style.form}">
					<g:VerticalPanel>
						<g:Label text="スキルの名前" />
						<g:TextBox ui:field="skillName" />
						<g:Label text="この人が持っているスキルの説明" />
						<g:TextArea ui:field="description" />
						<g:HorizontalPanel>
							<g:Button ui:field="submit" text="submit" />
							<g:Button ui:field="cancel" text="cancel" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:DialogBox>
				<g:DialogBox ui:field="agreedForm" visible="false" animationEnabled="true" styleName="{style.form}">
					<g:VerticalPanel>
						<g:Label text="コメント" />
						<g:TextArea ui:field="comment" />
						<g:HorizontalPanel>
							<g:Button ui:field="agreedSubmit" text="submit" />
							<g:Button ui:field="agreedCancel" text="cancel" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:DialogBox>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
