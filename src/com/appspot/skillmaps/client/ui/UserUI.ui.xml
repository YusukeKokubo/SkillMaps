<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sm="urn:import:com.appspot.skillmaps.client.ui">
	<ui:with type="com.appspot.skillmaps.client.bundle.Resources"
		field="res" />
	<ui:style>
		.form {
			border: 2px solid #ABB8C7;
			width: 760px;
			padding: 15px;
			background-color: #ffffff;
		}

		.button {
			margin: 2px;
		}

		.skills {
			margin-bottom: 20px;
		}

		.profile-detail {
			float: right;
			text-align: left;
			width: 100%;
		}

		.profile-detail table {
			float: left;
			text-align: left;
		}

		.userUiPanel{
			background-color: white;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.userUiPanel}" width="100%">
		<g:VerticalPanel width="100%">
			<g:HorizontalPanel>
				<g:Image ui:field="icon" />
				<g:VerticalPanel>
						<g:HTMLPanel>
							<g:InlineLabel ui:field="id" />
							(
							<g:InlineLabel ui:field="name" />
							)
						</g:HTMLPanel>
						<g:Label></g:Label>
						<g:Anchor ui:field="twitterLink" target="_blank" />
						<g:Anchor ui:field="githubLink" target="_blank" />
						<g:Label ui:field="selfIntroduction" />
						<g:Anchor ui:field="profileUrl1" target="_blank" />
						<g:Anchor ui:field="profileUrl2" target="_blank" />
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%">

				<g:Anchor ui:field="profileLink" text="プロフィールを見る" />
				<g:cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button ui:field="addSkill" text="この人のスキルを追加する" styleName="{style.button}" />
				</g:cell>
			</g:HorizontalPanel>
			<g:SimplePanel ui:field="skillsPanel" addStyleNames="{style.skills}" />
		</g:VerticalPanel>
		<hr />
		<g:DisclosurePanel ui:field="disableSkillPanel">
			<g:header>無効となったスキル</g:header>
			<g:HTMLPanel ui:field="disableSkillsBox">
				<center>
					<g:Image resource="{res.loader}" />
				</center>
			</g:HTMLPanel>
		</g:DisclosurePanel>
	</g:HTMLPanel>
</ui:UiBinder>
